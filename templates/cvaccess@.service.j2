[Unit]
After=network-online.target
Wants=network-online.target

[Service]
Type=notify
User=%i
ExecStartPre= \
rm /home/%i/.cvaccess/rclone.log
ExecStart= \
/usr/bin/rclone mount cvaccess:cvaccess /home/%i/vault \
--allow-root \
--default-permissions \
--umask 0022 \
--vfs-cache-mode full \
--vfs-cache-max-size 100M \
--log-level INFO \
--log-file /home/%i/.cvaccess/rclone.log \
--config /home/%i/.cvaccess/rclone.conf

ExecStop=fusermount3 -u /home/%i/vault
TimeoutStartSec=infinity


[Install]
WantedBy=default.target
